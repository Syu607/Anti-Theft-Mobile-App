<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_area"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="major.app.majorproject.UserAreaActivity"
  >

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWelcomeMessage"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
         />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="26dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_marginRight="20dp">
            <TextView

                android:text="IMEI Number"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView20" />

            <TextView
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Model"/>

            <TextView
                android:text="Name"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
               />

            <TextView
                android:text="Mobile No"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
               />

            <TextView
                android:text="Alternate Mobile No"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:text="Email"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView18" />

            <TextView
                android:text="Website"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" />

            <TextView
                android:text="Location"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView17" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="203dp"
            android:textSize="16sp"
            android:layout_weight="0.49"
            android:weightSum="1">

            <TextView
                android:text="IMEI Number"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:id="@+id/tvIMEI" />

            <TextView
                android:text="Phone Model"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:id="@+id/tvPhoneModel" />

            <TextView
                android:text="UserNameDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/tvusername" />

            <TextView
                android:text="MobileNoDisplay"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:id="@+id/tvprimarymobileNo"
                 />

            <TextView
                android:text="AlternateMobilenoDisplay"

                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:id="@+id/tvAlternateMobile"
                />

            <TextView
                android:text="EmailDisplay"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvEmail" />

            <TextView
                android:text=""
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:scrollHorizontally="true"
                android:id="@+id/hyperlink_textview" />
            <TextView
                android:text="Device Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lldetails"
                android:maxLines="2"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:textSize="16sp"
                />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:text="send Sms"
        android:theme="@style/DarkButton"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/sms"
        android:drawablePadding="2dp"
        android:id="@+id/btnSendSMS"
  />

    <Button
        android:text="Hidden Camera"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:theme="@style/DarkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/camera1"
        android:drawablePadding="2dp"
        android:id="@+id/hiddCamButton"
        android:onClick="openHiddenCamera"
       />

    <Button
        android:text="Log Out"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:theme="@style/RedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLogOut"
        android:onClick="logout"
        android:drawableLeft="@drawable/logout"
        android:drawablePadding="2dp"
         />


</LinearLayout>
